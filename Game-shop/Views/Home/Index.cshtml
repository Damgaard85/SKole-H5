@model Game_shop.Models.Home
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h2>List of Games</h2>
        @foreach (var game in Model.ListofGames.OrderByDescending(Game_shop => Game_shop.Rating))
        {
            <h3>@game.Title</h3>
            <p>Rating: @game.Rating</p>
            <p>Genre: @game.Genre</p>
            <h4>Description</h4>
            <p>@game.Description</p>
            <p>@game.ReleaseDate.ToString("dd.MM.yyyy")</p>
            <a href="/Home/UpdateGame?id=@game.Id">Update game</a>

            using (Html.BeginForm("Delete Game", "Home", FormMethod.Post))
            {
                <input type="hidden" name="id" value="@game.Id" />
                <button type="submit">Delete movie</button>
            }
        }

    </div>
    <a href="/Home/CreateMovie">Create new Game</a>
</body>
</html>
